{
  "eslint.autoFixOnSave": false,
  "eslint.validate": [],

  "env": {
    "browser": false,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "modules": true,
      "impliedStrict": true
    }
  },
  "plugins": [
    "node",
    "promise",
    "unicorn"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:promise/recommended",
    "plugin:unicorn/recommended"
  ],
  "rules": {
    "no-console": 0,
    "no-process-exit": 0,
    "unicorn/no-process-exit": 0,
    "semi": ["error", "never"]
  }
}
